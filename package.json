{
  "name": "sli.dev-course-manager",
  "displayName": "sli.dev Course manager",
  "description": "Managing a course from presentations on sli.dev",
  "version": "0.0.1",
  "publisher": "ea",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sliman-course-view",
          "title": "Course",
          "icon": "./resources/icon.svg"
        }
      ]
    },
    "views": {
      "sliman-course-view": [
        {
          "id": "courseExplorer",
          "name": "Course Explorer",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "sliman.createCourse",
        "title": "Create Course",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.scanCourse",
        "title": "Scan Course",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.addLecture",
        "title": "Add Lecture",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.runLecture",
        "title": "Run Lecture",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.buildLecture",
        "title": "Build Lecture",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.openSlides",
        "title": "Open slides.md",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.buildCourse",
        "title": "Build Course",
        "category": "sli.dev Course"
      },
      {
        "command": "sliman.setupPages",
        "title": "Setup GitHub Pages",
        "category": "sli.dev Course"
      },
      {
        "command": "courseExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "courseExplorer.refresh",
          "group": "navigation",
          "when": "view == courseExplorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",    
    "watch": "tsc -watch -p ./",    
    "lint": "eslint src --fix --config eslint.config.mjs",
    "lint:check": "eslint src --config eslint.config.mjs",
    "test": "pnpm run compile && pnpm run vscode-test",
    "vscode-test": "vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test",
    "test:course": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^CourseManager\"",
    "test:commands": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^Command\"",
    "test:example": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^Extension\"",
    "test:lecture": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^Lecture\"",
    "test:process": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^Process\"",
    "test:build": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^BuildManager\"",
    "test:translit": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^translit\"",
    "test:extension": "pnpm run compile && vscode-test --extensionDevelopmentPath=. --extensionTestsRoot=out/test --grep \"^Extension\""
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "18.18.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3"
  }
}
